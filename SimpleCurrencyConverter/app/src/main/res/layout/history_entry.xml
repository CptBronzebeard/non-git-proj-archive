<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="@drawable/border"
             android:layout_width="match_parent"
             android:layout_marginHorizontal="8dp"
             android:layout_marginBottom="4dp"
             android:layout_height="wrap_content" android:stretchColumns="*">

    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_gravity="center">
        <TextView

                android:text="TextView"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="2"
                android:paddingVertical="4dp"
                android:paddingHorizontal="4dp"
                android:layout_height="wrap_content" android:id="@+id/tv1_1"/>
        <!--<Space android:layout_width="0dp" android:layout_weight="1"></Space>-->
        <TextView
                android:text="TextView"
                android:layout_width="0dp" android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/dateTv"/>
        <TextView
                android:text="TextView"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="8dp"
                android:layout_column="2"
                android:paddingVertical="4dp"
                android:paddingHorizontal="4dp"
                android:layout_height="wrap_content" android:id="@+id/tv1_2"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent" android:layout_height="match_parent"
              android:layout_gravity="center">
        <TextView
                android:text="TextView"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:layout_height="wrap_content" android:id="@+id/tv2_1"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_forward_primary_24dp"
                android:id="@+id/imageView"/>
        <TextView
                android:text="TextView"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:layout_height="wrap_content" android:id="@+id/tv2_2"/>
    </TableRow>
    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
                android:text="TextView"
                android:gravity="center"
                android:layout_width="0dp"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" android:id="@+id/tv3_1"/>
        <Space android:layout_width="0dp" android:layout_weight="1"></Space>
        <TextView
                android:text="TextView"
                android:gravity="center"
                android:layout_width="0dp"
                android:paddingVertical="4dp"
                android:layout_column="2"
                android:paddingHorizontal="8dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" android:id="@+id/tv3_2"/>
    </TableRow>

</TableLayout>